import math
length = input("input a length for a rectangle: ")
width = input("input width for a rectangle: ")
length = int(length)
width = int(width)
area1 = length * width
print ("the area of the rectangle is: ", area1)

radius = input("input a radius for a circle here: ")
radius = int(radius)
area2 = math.pi * math.pow (radius,2)
print("The area of a circle of radius is %.2f" % area2)

height = input("input a height for a cylinder: ")
radius2 = input("input a radius for a cylinder: ")
height = int(height)
radius2 = int(radius2)
volume = math.pi * math.pow (radius2,2) *height
surface_area = (2 * math.pi * radius2 * height) + (2 * math.pi * math.pow (radius2,2))
print ("The surface area of a cylinder is %.2f" % surface_area)
print ("The volume of a cylinder is %.2f" % volume)
